<p id="notice"><%= notice %></p>

<h1>Fava Users</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fava_users.each do |fava_user| %>
      <tr>
        <td><%= fava_user.first_name %></td>
        <td><%= fava_user.last_name %></td>
        <td><%= fava_user.email %></td>
        <td><%= fava_user.phone %></td>
        <td><%= link_to 'Show', fava_user %></td>
        <td><%= link_to 'Edit', edit_fava_user_path(fava_user) %></td>
        <td><%= link_to 'Destroy', fava_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

